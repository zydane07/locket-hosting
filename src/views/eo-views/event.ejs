<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/event-organizer/header') %>

    <title>Event Saya</title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('../layout/event-organizer/sidebar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Event Saya</h1>
              </div>
              <!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                  <li class="breadcrumb-item active">Event Saya</li>
                </ol>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
          <!-- /.container-fluid -->
          <div class="container-fluid">
            <div class="card card-outline card-primary">
              <div class="card-header text-right">
                <a class="btn-success btn-sm btn" href="/create-event">
                  <i class="fa fa-plus"> </i>
                  Masukkan Event Baru
                </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table-bordered table-striped table">
                  <thead>
                    <tr>
                      <th>Nama Event</th>
                      <th>Tanggal Event</th>
                      <th>Kategori Event</th>
                      <th>Jumlah Pendaftar</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Jakreatifes 2022</td>
                      <td>12-02-2022</td>
                      <td>Lomba</td>
                      <td>12 Peserta</td>
                      <td>
                        <a
                          class="btn-info bg-olive btn-sm btn"
                          href="/detail-event"
                        >
                          <i class="fas fa-folder"> </i>
                          Detail
                        </a>

                        <a
                          class="btn-info btn-sm btn text-white"
                          href="edit-event"
                        >
                          <i class="fas fa-pencil-alt"> </i>
                          Edit
                        </a>

                        <a
                          class="btn-danger btn-sm btn text-white"
                          data-toggle="modal"
                          data-target="#deletemodal-event"
                        >
                          <i class="fas fa-trash"> </i>
                          Hapus
                        </a>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>
      <!-- Modal Delete-->
      <div
        class="fade modal"
        id="deletemodal-event"
        tabindex="-1"
        role="dialog"
        aria-labelledby="deletemodal-eventTitle"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">
                Hapus Event
              </h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Apakah Kamu Yakin ingin Menghapus Event ini?
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn-secondary btn"
                data-dismiss="modal"
              >
                Batal
              </button>
              <button type="button" class="btn-danger btn">Hapus</button>
            </div>
          </div>
        </div>
      </div>
      <%- include('../layout/event-organizer/footer') %>
    </div>
    <%- include('../layout/event-organizer/script') %>
  </body>
</html>
