<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/event-organizer/header') %>

    <title>Pengaturan Akun</title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('../layout/event-organizer/sidebar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Pengaturan Akun</h1>
              </div>
              <!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                  <li class="breadcrumb-item active">Pengaturan Akun</li>
                </ol>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
          <!-- /.container-fluid -->
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-3">
                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                  <div class="card-body box-profile">
                    <div class="photo-pp-container text-center">
                      <img
                        class="profile-user-img img-fluid img-circle mb-2"
                        id="photoPp"
                        src="/img/logo EO.png"
                        alt="User profile picture"
                      />
                      <input type="file" id="file" />
                      <label for="file" id="uploadBtn">Pilih Poto</label>
                    </div>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>
              <!-- /.col -->
              <div class="col-md-9">
                <div class="card">
                  <div class="card-header p-2">
                    <ul class="nav nav-pills">
                      <li class="nav-item">
                        <a
                          class="nav-link active"
                          href="#activity"
                          data-toggle="tab"
                          >Deskripsi Event Organizer</a
                        >
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="#timeline" data-toggle="tab"
                          >Pengaturan Akun</a
                        >
                      </li>
                    </ul>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <div class="tab-content">
                      <div class="tab-pane active" id="activity">
                        <div class="form-group">
                          <label for="inputName">Nama Event Organizer</label>
                          <input
                            type="text"
                            id="inputName"
                            class="form-control"
                            value="Ufo Veteran Jakarta  "
                            name="nama_event"
                            disabled
                          />
                        </div>
                        <div class="form-group">
                          <label for="deskripsi_event"
                            >Deskripsi Event Organizer</label
                          >
                          <textarea
                            id="inputDescription"
                            class="form-control"
                            rows="10"
                            name="deskripsi"
                          ></textarea>
                        </div>
                        <div class="text-right">
                          <button type="submit" class="btn-success btn">
                            Edit
                          </button>
                          <button type="submit" class="btn-secondary btn">
                            Kembali
                          </button>
                        </div>
                      </div>
                      <!-- /.tab-pane -->
                      <div class="tab-pane" id="timeline">
                        <div class="card-body">
                          <div class="form-group row">
                            <label
                              for="inputEmail3"
                              class="col-sm-2 col-form-label"
                              >Email</label
                            >
                            <div class="col-sm-6">
                              <input
                                type="email"
                                class="form-control"
                                id="inputEmail3"
                                placeholder="bem@upnvj.ac.id"
                                name="email_ormawa"
                                disabled
                              />
                            </div>
                          </div>
                          <div class="form-group row">
                            <label
                              for="inputPassword3"
                              class="col-sm-2 col-form-label"
                              >Password</label
                            >
                            <div class="col-sm-6">
                              <input
                                type="password"
                                class="form-control mb-2"
                                id="myInput"
                                value="ini password"
                                name="repassword"
                              />
                              <input type="checkbox" id="showPassword" />Show
                              Password
                            </div>
                          </div>
                          <div class="form-group row">
                            <label
                              for="inputPassword4"
                              class="col-sm-2 col-form-label"
                              >Confirm Password</label
                            >
                            <div class="col-sm-6">
                              <input
                                type="password"
                                class="form-control"
                                id="inputPassword4"
                                placeholder="Confirm Password"
                                name="repassword"
                              />
                            </div>
                          </div>
                        </div>
                        <div class="text-right">
                          <form method="post">
                            <button type="submit" class="btn-success btn">
                              Edit
                            </button>
                            <button type="submit" class="btn-secondary btn">
                              Kembali
                            </button>
                          </form>
                        </div>
                      </div>
                      <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>
              <!-- /.col -->
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>

      <%- include('../layout/event-organizer/footer') %>
    </div>
    <%- include('../layout/event-organizer/script') %>
  </body>
</html>
