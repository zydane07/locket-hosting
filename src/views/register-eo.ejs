<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('layout/header') %>
    <title>Register Event Organizer Page</title>
  </head>
  <body class="debug-screens">
    <%- include('layout/login-header') %>

    <div
      class="font-montserrat register-container-2 relative grid grid-cols-1 items-center justify-center lg:grid-cols-3"
    >
      <div class="sizing-content col-span-2 mb-20 lg:mb-0">
        <!-- header -->
        <div class="mb-6 text-center">
          <h1 class="text-header text-style-header mb-2 text-3xl">
            Selamat Datang!
          </h1>
          <p class="text-sm">Silahkan isi data-data berikut untuk mendaftar</p>
        </div>
        <!-- header -->

        <form action="#" method="">
          <!-- Email input -->
          <div class="mb-6">
            <div class="font-montserrat form-floating relative w-full">
              <input
                type="text"
                class="transition-form form-control w-full rounded-xl border bg-green-50 text-black"
                placeholder="Masukkan Email"
                id="email"
              />
              <label for="floatingInput" class="text-gray-400"
                >Masukkan Email</label
              >
            </div>
          </div>

          <!-- Nama Input -->
          <div class="mb-6">
            <div class="font-montserrat form-floating relative w-full">
              <input
                type="text"
                class="transition-form form-control w-full rounded-xl border bg-green-50 text-black"
                placeholder="Masukkan Nama"
                id="name"
              />
              <label for="floatingInput" class="text-gray-400"
                >Masukkan Nama</label
              >
            </div>
          </div>

          <!-- no hp input -->
          <div class="mb-6">
            <div class="font-montserrat form-floating relative w-full">
              <input
                type="text"
                class="transition-form form-control w-full rounded-xl border bg-green-50 text-black"
                placeholder="Masukkan No. Telepon"
                id="no-phone"
              />
              <label for="floatingInput" class="text-gray-400"
                >Masukkan No. Telepon</label
              >
            </div>
          </div>

          <!-- deskripsi EO -->
          <div class="mb-6">
            <textarea
              rows="5"
              class="w-full rounded-xl border bg-green-50 p-2 text-black focus:border-blue-600 focus:outline-none"
              placeholder="Deskripsi Event Organizer"
            ></textarea>
          </div>

          <!-- Password input -->
          <div class="mb-6">
            <div class="font-montserrat form-floating relative w-full">
              <input
                type="password"
                class="transition-form form-control w-full rounded-xl border bg-green-50 text-black"
                placeholder="Masukkan Password"
                id="password"
              />
              <label for="floatingInput" class="text-gray-400"
                >Masukkan Password</label
              >
            </div>
          </div>
          <!-- Password Konfirmasi input -->
          <div class="mb-6">
            <div class="font-montserrat form-floating relative w-full">
              <input
                type="password"
                class="transition-form form-control w-full rounded-xl border bg-green-50 text-black"
                placeholder="Konfirmasi Password"
                id="password-2"
              />
              <label for="floatingInput" class="text-gray-400"
                >Konfirmasi Password</label
              >
            </div>
          </div>

          <div class="mb-8">
            <label
              for="formFileLg"
              class="form-label mb-2 inline-block text-gray-700"
              >Verifikasi KTP</label
            >
            <input
              type="file"
              id="bukti_1"
              name="bukti_1"
              class="input-file"
              aria-describedby="file_input_help_1"
            />
            <p class="mt-1 text-xs text-gray-500" id="file_input_help_1">
              Maksimal 2MB, Tipe File .png, .jpg.
            </p>
          </div>

          <a
            type="submit"
            data-mdb-ripple="true"
            data-mdb-ripple-color="light"
            class="bg-gradient-2 btn-login btn-login-transition mb-2"
            href="/register-verifikasi"
          >
            Daftar
          </a>
        </form>
      </div>
      <%- include('layout/login-side') %>
    </div>
    <%- include('layout/login-footer') %>
  </body>
</html>
